{
  "name": "carretto",
  "description": "A dataloader implementation with adapters",
  "author": "Alessandro Magionami - @alemagio",
  "license": "MIT",
  "scripts": {
    "build": "turbo build --color",
    "test": "turbo run test",
    "preinstall": "npx only-allow pnpm",
    "release": "pnpm run build && changeset publish",
    "precommit": "pnpm install",
    "check-updates": "pnpm outdated --recursive",
    "lint": "biome check .",
    "format": "biome format --write .",
    "prepare": "husky",
    "unit": "turbo run unit"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.6.2",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/lint": "^19.8.1",
    "@commitlint/prompt": "^19.8.1",
    "@ducktors/tsconfig": "^1.0.0",
    "@types/node": "^24.9.1",
    "c8": "^10.1.3",
    "commitlint-plugin-function-rules": "^4.1.0",
    "fastify-tsconfig": "^2.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "vitest-mongodb": "^1.0.2"
  },
  "pnpm": {
    "overrides": {
      "cross-spawn@>=7.0.0 <7.0.5": ">=7.0.5"
    }
  }
}
